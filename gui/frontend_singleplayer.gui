@decoration_alpha = 0.4

widget = {
	name = "mainmenu_single_player"
	size = { 100% 100% }
	
	widget = {
		size = { 100% 100% }
		alwaystransparent = yes
		icon = {
			texture = "gfx/frontend/imp19_main_menu_bkg3.dds"
			size = { 100% 100% }
			icon = {
				texture = "gfx/interface/base_parts/background_texture_x60bd.dds"
				spriteType = Corneredtiled
				size = { 100% 100% }
				alpha = 0.8
				modify_texture = {
					blend_mode = alphamultiply
					texture = "gfx/interface/base_parts/fade_bg_ingame_menu.dds"
				}
			}
		}
	}
	state = { 
		name = _show
		on_start = "[PdxGuiWidget.FindChild('button1').TriggerAnimation('anim1')]"
		on_start = "[PdxGuiWidget.FindChild('button1d').TriggerAnimation('anim1')]"
		on_start = "[PdxGuiWidget.FindChild('button2').TriggerAnimation('anim1')]"
		on_start = "[PdxGuiWidget.FindChild('button3').TriggerAnimation('anim1')]"
		on_start = "[PdxGuiWidget.FindChild('button4').TriggerAnimation('anim1')]"
		on_start = "[PdxGuiWidget.FindChild('button5').TriggerAnimation('anim1')]"
	}
	state = {
		name = _hide
		on_start = "[PdxGuiWidget.FindChild('button1').TriggerAnimation('anim1h')]"
		on_start = "[PdxGuiWidget.FindChild('button1d').TriggerAnimation('anim1h')]"
		on_start = "[PdxGuiWidget.FindChild('button2').TriggerAnimation('anim1h')]"
		on_start = "[PdxGuiWidget.FindChild('button3').TriggerAnimation('anim1h')]"
		on_start = "[PdxGuiWidget.FindChild('button4').TriggerAnimation('anim1h')]"
		on_start = "[PdxGuiWidget.FindChild('button5').TriggerAnimation('anim1h')]"
	}
	icon = {
		name = "cloud_save_indicator"
		position = { -180 5 }
		parentanchor = top|right
		texture = "gfx/interface/cloud_uplink.dds"
		shaderfile = "gfx/FX/pdxgui_glow_game.shader"
		tooltip = "CLOUD_SAVE_IN_PROGRESS_TOOLTIP"
		visible = "[GameIsCloudStorageOperationInProgress]"
	}

	icon = {
		name = "clausewitz_logo"
		position = { -160 0 }
		parentanchor = bottom|right
		texture = "gfx/interface/clausewitz_logo.dds"
		scale = 0.90
		shaderfile = "gfx/FX/pdxgui_glow_game.shader"
	}
	icon = {
		name = "pdx_dev_logo"
		position = { -40 0 }
		parentanchor = bottom|right
		texture = "gfx/interface/pdx_dev_logo_s.dds"
		scale = 0.90
		shaderfile = "gfx/FX/pdxgui_glow_game.shader"
	}
