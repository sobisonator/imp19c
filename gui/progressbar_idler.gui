	# }

	icon = {
		texture = "gfx/interface/base_parts/background_texture_x60bd.dds"
		spriteType = Corneredtiled
		alpha = 0.95
		size = { 120% 116 }
		parentanchor = hcenter|bottom
		position = { 0 12 }
		widgetanchor = hcenter|bottom

		modify_texture = {
			name = "Alpha"
			texture = "gfx/interface/base_parts/background_x60bd_alpha.dds"
			blend_mode = alphamultiply
			spriteType = Corneredtiled
			spriteborder = { 60 60 }
		}

		background = {
			name = "Shadow bottom bar"
			texture = "gfx/interface/base_parts/button_square_dropshadow_x16y16bd.dds"
			shaderfile = "gfx/FX/pdxgui_default.shader"
			spriteType = corneredtiled
			spriteborder = { 8 8 }
			margin_top = 4
			alpha = 0.2
		}
	}

	icon = {
		name "left"
		texture = "gfx/interface/frontend/loading_pattern.dds"
		alpha = 0.95
		size = { 30 94 }
		parentanchor = left|bottom
		position = { 3 -2 }

		modify_texture = {
			texture = "gfx/interface/base_parts/background_red.dds"
			framesize = { 300 300 }
			frame = 1
		}
	}

	icon = {
		name "right"
		texture = "gfx/interface/frontend/loading_pattern.dds"
		alpha = 0.95
		size = { 30 94 }
		parentanchor = right|bottom
		position = { -3 -2 }

		modify_texture = {
			texture = "gfx/interface/base_parts/background_red.dds"
			framesize = { 300 300 }
			frame = 1
		}
	}


	icon = {
		name = "bottom line"
		texture = "gfx/interface/base_parts/underline_x60bd.dds"
		spriteType = Corneredtiled
		spriteborder = { 30 0 }
		size = { 96% 6 }
		position = { 0 -91 }
		parentanchor = hcenter|bottom
		modify_texture = {
			texture = "gfx/interface/base_parts/background_red.dds"
			framesize = { 300 300 }
			frame = 1
		}
	}

	margin_widget = {
		size = { 100% 116 }
		parentanchor = hcenter|bottom
		widgetanchor = hcenter|bottom
		textbox = {
			name = "load_tip_text"
			size = { 90% 100 }
			using = BaseFontM
			parentanchor = bottom|hcenter
			align = center|nobaseline
			multiline = yes
			text = [ProgressInterface.GetLoadTip]
		}
	}

	textbox = {
		visible = "[Not(IsLiveBuild)]"
		parentanchor = bottom|right
		widgetanchor = bottom|right
		position = { -40 6 }
		name = "version_label"
		text = "[GetCompleteVersionInfoString]"
		size = { 400 120 }
		using = BaseFontS
		multiline = yes
		align = right

	}
}
