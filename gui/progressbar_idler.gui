	icon = {
		texture = "gfx/icons/grad_bg.dds"
		alpha = 0.9
		size = { 550 42 }
		position = { -3 -5 }

		using = border_medium_torn_alpha
	}

	margin_widget = {
		size = { 100% 42 }

		flowcontainer = {
			parentanchor = vcenter
			spacing = 8
			position = { 10 -2 }

			container = {
				progressbar = {
					size = { 32 32 }
					gfxtype = framedprogressbargfx
					texture = "gfx/interface/frontend/loading_progress.dds"
					framesize = { 32 32 }
					loopinterval = 2.0
					max = 0
					position = { 0 -8 }
				}
			}
			textbox = {
				name = "load_status_text"
				using = BaseFontM
				align = center|nobaseline
				autoresize = yes
				text = [ProgressInterface.GetProgress]
			}
		}
	}

